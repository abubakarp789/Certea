# =============================================================================
# Digital Signature Validator - Environment Configuration
# =============================================================================
# Copy this file to .env and customize as needed

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json                   # json or text
LOG_FILE=logs/app.log            # Path to log file
LOG_MAX_SIZE_MB=10               # Max log file size in MB before rotation
LOG_BACKUP_COUNT=5               # Number of backup log files to keep

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=1024            # Maximum file upload size (1GB default)
MAX_MESSAGE_LENGTH=10485760      # Maximum message length (10MB default)
DEFAULT_KEY_SIZE=2048            # Default RSA key size
DATA_DIR=./data                  # Directory for application data
KEYS_DIR=./keys                  # Directory for key storage

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST=127.0.0.1               # Host to bind the server
API_PORT=8000                    # Port to run the server
API_RELOAD=true                  # Enable auto-reload for development

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true          # Enable/disable rate limiting
RATE_LIMIT_KEY_GENERATE=5/minute          # Key generation endpoint
RATE_LIMIT_SIGN=20/minute                 # Signing endpoints
RATE_LIMIT_VERIFY=50/minute               # Verification endpoints
RATE_LIMIT_CA=5/minute                    # CA operations
RATE_LIMIT_LOGS=30/minute                 # Log retrieval

# -----------------------------------------------------------------------------
# Resource Guards
# -----------------------------------------------------------------------------
MAX_CONCURRENT_REQUESTS=100      # Maximum concurrent requests
REQUEST_TIMEOUT_SECONDS=30       # Request timeout in seconds
MAX_KEY_GENERATION_PER_HOUR=50   # Maximum key generations per hour
